include ../__sales-block/section__sales-block.pug
mixin section__presentation(sectionImage, isSales, href)
   .section__presentation.rel.row.jcc&attributes(attributes)
      if isSales
         +section__sales-block()
      a(href=href).cup
         .section__presentation-back.w100.h100(style=`background-image: linear-gradient(to right, #fff 0%, #ffffff88 50%, #fff 100%), url(../__attach/Images/photo_${sectionImage});`)
            .section__presentation-front.w100.h100(style=`background-image: url(../__attach/Images/photo_${sectionImage});`)